<p id="notice"><%= notice %></p>

<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title">Friend Profile</h5>
    <ul class="list-group list-group-flush">
    <li class="list-group-item"><h6 class="card-subtitle mb-2 text-muted">First name:</h6><%= @friend.first_name %></li>
    <li class="list-group-item"><h6 class="card-subtitle mb-2 text-muted">Last name:</h6><%= @friend.last_name %></li>
    <li class="list-group-item"><h6 class="card-subtitle mb-2 text-muted">Email:</h6><%= @friend.email %></li>
    <li class="list-group-item"><h6 class="card-subtitle mb-2 text-muted">Phone:</h6><%= @friend.phone %></li>
    <li class="list-group-item"><h6 class="card-subtitle mb-2 text-muted">Hashtag:</h6><%= @friend.hashtag %></li>
  </ul>
  <%= link_to 'Edit', edit_friend_path(@friend), class:'btn btn-info' %> 
  <%= link_to 'Back', friends_path, class:'btn btn-warning' %>
  </div>
</div>

